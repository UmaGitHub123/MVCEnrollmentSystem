<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TU Management System</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/font/css/open-iconic-bootstrap.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="row">
        <div class="col-xl-2">
            <div class="col-xl-2 navigation">
            <div class="user-role">
                <h5 class="" id="student-role">Student</h5>
                <h5 class="text-center" id="admin-role">Admin</h5>
            </div>
            <div class="logo-div">
                <img src="@Url.Content("~/Content/Images/student1.jpg")" id="student-image" class="rounded-circle">
            </div>
            <div id="name-status">
                <h5 id="student-name" class="text-center">@Html.Partial("_StudentNamePartial")</h5>
                <p id="student-status" class="text-center">Undergraduate - Full Time</p>
            </div>
            <nav>
                <ul>
                    <li class="nav-item" id="dashboard"><a href="@Url.Action("Student", "Home", null)"><span class="oi oi-home" title="oi-home" aria-hidden="true"></span>Dashboard</a></li>
                    <li class="nav-item" id="coursetraj"><a href="@Url.Action("StudentCourses", "Home", null)"><span class="oi oi-clock"></span>Course Trajectory </a></li>
                    <li class="nav-item " id="coursesearch"><a href="@Url.Action("CourseSearch", "Home", null)"><span class="oi oi-magnifying-glass"></span>Course Search </a></li>
                    <li class="nav-item " id="addrop"><a href="@Url.Action("AddDropCourses", "Home", null)"><span class="oi oi-plus"></span>/<span class="oi oi-minus"></span>Add/Drop Courses </a></li>
                    @Html.Partial("_LogoutPartial")
                </ul>
            </nav>
            </div>
        </div>
   
        <div class="col-xl-10 bodycontent">
            <div id="notificationbar"></div>
            @RenderBody()

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
